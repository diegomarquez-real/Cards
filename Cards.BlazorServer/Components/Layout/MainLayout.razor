@inherits LayoutComponentBase
@using Cards.BlazorServer.Components.Pages

<AuthorizeView>
    <Authorized>
        <div id="main-tcg" class="d-flex bg-secondary">
            <NavMenu />
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </Authorized>
    <NotAuthorized>
        <LoginRedirect />
    </NotAuthorized>
</AuthorizeView>